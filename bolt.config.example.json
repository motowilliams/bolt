{
  "$schema": "./bolt.config.schema.json",
  "IacPath": "infrastructure",
  "BicepPath": "infrastructure/bicep",
  "TerraformPath": "infrastructure/terraform",
  "GoPath": "src/app",
  "DotNetPath": "src",
  "TypeScriptPath": "src",
  "BicepToolPath": "/usr/local/bin/bicep",
  "TerraformToolPath": "/usr/local/bin/terraform",
  "GoToolPath": "/usr/local/go/bin/go",
  "DotNetToolPath": "/usr/local/bin/dotnet",
  "NodeToolPath": "/usr/local/bin/node",
  "Environment": "dev",
  "DatabaseHost": "localhost",
  "DatabasePort": 5432,
  "ApiEndpoint": "https://api.example.com",
  "Settings": {
    "EnableLogging": true,
    "LogLevel": "Debug",
    "MaxRetries": 3
  },
  "Features": {
    "Authentication": {
      "Provider": "OAuth2",
      "Timeout": 30
    }
  }
}
