{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Bolt: Build",
      "type": "shell",
      "command": "pwsh",
      "args": ["-File", "${workspaceFolder}/bolt.ps1", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Bolt: Format Source",
      "type": "shell",
      "command": "pwsh",
      "args": ["-File", "${workspaceFolder}/bolt.ps1", "format"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Bolt: Lint Source",
      "type": "shell",
      "command": "pwsh",
      "args": ["-File", "${workspaceFolder}/bolt.ps1", "lint"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Bolt: List Tasks",
      "type": "shell",
      "command": "pwsh",
      "args": ["-File", "${workspaceFolder}/bolt.ps1", "-Help"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Test: All",
      "type": "shell",
      "command": "pwsh",
      "args": ["-Command", "Invoke-Pester", "-Output", "Detailed"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Core (Fast)",
      "type": "shell",
      "command": "pwsh",
      "args": ["-Command", "Invoke-Pester", "-Tag", "Core", "-Output", "Detailed"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Tasks",
      "type": "shell",
      "command": "pwsh",
      "args": ["-Command", "Invoke-Pester", "-Tag", "Tasks", "-Output", "Detailed"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
