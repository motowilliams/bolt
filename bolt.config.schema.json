{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bolt Configuration",
  "description": "Configuration file for Bolt build system variables",
  "type": "object",
  "properties": {
    "IacPath": {
      "type": "string",
      "description": "Relative path to infrastructure-as-code files (backward compatibility - maps to BicepPath/TerraformPath)",
      "examples": ["infrastructure", "iac", "bicep"]
    },
    "BicepPath": {
      "type": "string",
      "description": "Relative path to Bicep source files",
      "examples": ["infrastructure", "iac", "bicep"]
    },
    "TerraformPath": {
      "type": "string",
      "description": "Relative path to Terraform source files",
      "examples": ["infrastructure", "terraform", "tf"]
    },
    "GoPath": {
      "type": "string",
      "description": "Relative path to Go source files",
      "examples": ["app", "src", "cmd"]
    },
    "DotNetPath": {
      "type": "string",
      "description": "Relative path to .NET source files",
      "examples": ["src", "app", "projects"]
    },
    "TypeScriptPath": {
      "type": "string",
      "description": "Relative path to TypeScript source files",
      "examples": ["src", "app", "packages"]
    },
    "BicepToolPath": {
      "type": "string",
      "description": "Absolute path to Bicep CLI executable (optional - defaults to PATH search)",
      "examples": ["/usr/local/bin/bicep", "C:\\tools\\bicep\\bicep.exe"]
    },
    "TerraformToolPath": {
      "type": "string",
      "description": "Absolute path to Terraform CLI executable (optional - defaults to PATH search)",
      "examples": ["/usr/local/bin/terraform", "C:\\tools\\terraform\\terraform.exe"]
    },
    "GoToolPath": {
      "type": "string",
      "description": "Absolute path to Go CLI executable (optional - defaults to PATH search)",
      "examples": ["/usr/local/go/bin/go", "C:\\Go\\bin\\go.exe"]
    },
    "DotNetToolPath": {
      "type": "string",
      "description": "Absolute path to .NET CLI executable (optional - defaults to PATH search)",
      "examples": ["/usr/local/bin/dotnet", "C:\\Program Files\\dotnet\\dotnet.exe"]
    },
    "NodeToolPath": {
      "type": "string",
      "description": "Absolute path to Node.js executable for TypeScript tasks (optional - defaults to PATH search)",
      "examples": ["/usr/local/bin/node", "C:\\Program Files\\nodejs\\node.exe"]
    },
    "Environment": {
      "type": "string",
      "description": "Target deployment environment",
      "enum": ["dev", "test", "staging", "prod"],
      "examples": ["dev"]
    },
    "Colors": {
      "type": "object",
      "description": "Custom color scheme for task output (overrides built-in colors)",
      "properties": {
        "Header": {
          "type": "string",
          "enum": ["Black", "DarkBlue", "DarkGreen", "DarkCyan", "DarkRed", "DarkMagenta", "DarkYellow", "Gray", "DarkGray", "Blue", "Green", "Cyan", "Red", "Magenta", "Yellow", "White"],
          "default": "Cyan"
        },
        "Success": {
          "type": "string",
          "enum": ["Black", "DarkBlue", "DarkGreen", "DarkCyan", "DarkRed", "DarkMagenta", "DarkYellow", "Gray", "DarkGray", "Blue", "Green", "Cyan", "Red", "Magenta", "Yellow", "White"],
          "default": "Green"
        },
        "Error": {
          "type": "string",
          "enum": ["Black", "DarkBlue", "DarkGreen", "DarkCyan", "DarkRed", "DarkMagenta", "DarkYellow", "Gray", "DarkGray", "Blue", "Green", "Cyan", "Red", "Magenta", "Yellow", "White"],
          "default": "Red"
        },
        "Warning": {
          "type": "string",
          "enum": ["Black", "DarkBlue", "DarkGreen", "DarkCyan", "DarkRed", "DarkMagenta", "DarkYellow", "Gray", "DarkGray", "Blue", "Green", "Cyan", "Red", "Magenta", "Yellow", "White"],
          "default": "Yellow"
        },
        "Info": {
          "type": "string",
          "enum": ["Black", "DarkBlue", "DarkGreen", "DarkCyan", "DarkRed", "DarkMagenta", "DarkYellow", "Gray", "DarkGray", "Blue", "Green", "Cyan", "Red", "Magenta", "Yellow", "White"],
          "default": "Gray"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true,
  "examples": [
    {
      "IacPath": "infrastructure",
      "Environment": "dev",
      "DatabaseHost": "localhost",
      "DatabasePort": 5432,
      "Settings": {
        "EnableLogging": true,
        "LogLevel": "Debug"
      }
    }
  ]
}
